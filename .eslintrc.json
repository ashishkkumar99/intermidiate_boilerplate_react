{
  "parser": "babel-eslint",
  "plugins": ["react", "react-hooks"],
  "extends": ["airbnb", "prettier", "prettier/react"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": true }
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
